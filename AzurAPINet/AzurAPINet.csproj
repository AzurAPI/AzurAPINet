<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
    <RootNamespace>Jan0660.AzurAPINet</RootNamespace>
    <LangVersion>8.0</LangVersion>
    <PackageLicenseExpression>GPLv3</PackageLicenseExpression>
    <Authors>Jan0660</Authors>
    <Version>1.0.0</Version>
    <Description>A .NET standard wrapper for the AzurAPI database.</Description>
    <PackageReleaseNotes>implement all the functions on the website
    breaking changes: GetShip, GetAllShips and other methods are getShip, getAllShips... and more</PackageReleaseNotes>
    <NeutralLanguage>en</NeutralLanguage>
    <RepositoryUrl>https://github.com/AzurAPI/AzurAPINet</RepositoryUrl>
    <PackageProjectUrl>https://azurapi.github.io/</PackageProjectUrl>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="Nullable" Version="1.3.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
